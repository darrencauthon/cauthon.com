    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Cabin">
    <style>
      body {
          font-family: 'Cabin';
          font-size: 48px;
        }
    </style>
  </head>
  <body>
    <div>
      <label>Name:</label>
      <input type="text" ng-model="yourName" placeholder="Enter a name here">
