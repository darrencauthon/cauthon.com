#about-me
  %h2 ABOUT-ME
  #about-left
    .box-wrap.antiscroll-wrap
      .antiscroll-inner
        .inner-text
          %h1.pcblock WORK EXPERIENCE
          - @work_experience.each do |experience|
            .block
              %h5= experience[:since].upcase
              .line-200
                .line-1
                .deg-130
                .deg-50
                .line-2
              %h4= experience[:position].upcase
              %h3= experience[:company].upcase
              %p= experience[:description]
          %h1.pcblock EDUCATION
          - @education.each do |experience|
            .block
              %h5= experience[:since]
              .line-200
                .line-1
                .deg-130
                .deg-50
                .line-2
              %h4= experience[:degree].upcase
              %h3= experience[:school].upcase
          %br/
          %br/
        / end inner-text
      / end antiscroll-inner
    / end antiscroll-wrap
  / end ABOUT LEFT
